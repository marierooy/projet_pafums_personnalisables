    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Senteur</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for heart_scent in heart_scents %}
            <tr>
                <td>{{ heart_scent.id }}</td>
                <td>{{ heart_scent.Scent }}</td>
                <td><img src="{{heart_scent.image}}" width="300"></td>
                <td>
                    <a href="{{ path('app_heart_scent_show', {'id': heart_scent.id}) }}">Montrer</a>
                    <a href="{{ path('app_heart_scent_edit', {'id': heart_scent.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune senteur trouv√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_heart_scent_new') }}">Ajouter une nouvelle senteur</a>
{% endblock %}
