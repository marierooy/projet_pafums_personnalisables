{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{product.image}}" width="300"></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }} €</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">Retour à la liste des produits</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">Editer</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
